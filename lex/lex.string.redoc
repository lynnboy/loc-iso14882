[section#lex.string
    [:en] String literals
    [:zh_CN] 字符串字面量
]

[%  [:en] literal[!string]
    [:zh_CN] 字面量[!字符串～] ]

[syntax]
[rule string-literal [:zh_CN] 字符串字面量 ]
    [| [~:opt encoding-prefix] [`"] [~:opt s-char-sequence] [`"] ]
    [| [~:opt encoding-prefix] [`R] raw-string ]
[rule:end]

[rule s-char-sequence [:zh_CN] s-字符序列 ]
    [| s-char ]
    [| s-char-sequence s-char ]
[rule:end]

[rule s-char [:zh_CN] s-字符 ]
    [| basic-s-char ]
    [| escape-sequence ]
    [| universal-character-name ]
[rule:end]

[rule basic-s-char [:zh_CN] 基本-s-字符 ]
    [|:descriptive
        [:en] any member of the translation character set except the U+0022 QUOTATION MARK,[br]
            U+005C REVERSE SOLIDUS, or new-line character
        [:zh_CN] 翻译字符集中除了 U+0022 QUOTATION MARK，U+005C REVERSE SOLIDUS[br]
            或换行字符之外的任意成员
    ]
[rule:end]

[rule raw-string [:zh_CN] 原始字符串 ]
    [| [`"] [~:opt d-char-sequence] [`(] [~:opt r-char-sequence] [`)]
        [~:opt d-char-sequence] [`"] ]
[rule:end]

[rule r-char-sequence [:zh_CN] r-字符序列 ]
    [| r-char ]
    [| r-char-sequence r-char ]
[rule:end]

[rule r-char [:zh_CN] r-字符 ]
    [|:descriptive
        [:en] any member of the translation character set, except a U+0029 RIGHT PARENTHESIS followed by [br]
            the initial [~d-char-sequence] (which may be empty) followed by a U+0022 QUOTATION MARK
        [:zh_CN] 翻译字符集中的任何成员，除了 U+0029 RIGHT PARENTHESIS 后面跟着 [br]
            开头的 [~d-字符序列]（可能为空）后面再跟着 U+0022 QUOTATION MARK
    ]
[rule:end]

[rule d-char-sequence [:zh_CN] d-字符序列 ]
    [| d-char ]
    [| d-char-sequence d-char ]
[rule:end]

[rule d-char [:zh_CN] s-字符 ]
    [|:descriptive
        [:en] any member of the basic character set except: [br]
            U+0020 SPACE, U+0028 LEFT PARENTHESIS, U+0029 RIGHT PARENTHESIS, [br]
            U+005C REVERSE SOLIDUS, U+0009 CHARACTER TABULATION, [br]
            U+000B LINE TABULATION, U+000C FORM FEED (FF), and new-line
        [:zh_CN] 基本字符集中的任何成员，除了： [br]
            U+0020 SPACE，U+0028 LEFT PARENTHESIS，U+0029 RIGHT PARENTHESIS，[br]
            U+005C REVERSE SOLIDUS，U+0009 CHARACTER TABULATION，[br]
            U+000B LINE TABULATION，U+000C FORM FEED (FF)，以及换行
    ]
[rule:end]

[syntax:end]

