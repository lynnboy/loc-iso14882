[section#ctime.syn
    [:en] Header [`<ctime>] synopsis
    [:zh_CN] 头文件 [`<ctime>] 纲要
]

[%@hdr@def ctime]
[%@lib CLOCKS_PER_SEC]
[%@lib NULL]
[%@lib TIME_UTC]
[%@lib asctime]
[%@lib clock_t]
[%@lib clock]
[%@lib ctime]
[%@lib difftime]
[%@lib gmtime]
[%@lib localtime]
[%@lib mktime]
[%@lib size_t]
[%@lib strftime]
[%@lib time_t]
[%@lib timespec_get]
