[codeblock:end]

[enter:description]
[para:returns]
[:en] [`u16string{str, len}].
[:zh_CN] [`u16string{str, len}]。
[exit:description]

[%@library operator""s[!u32string]]
[%@library u32string[!operator""s]]
[codeblock:declaration]
