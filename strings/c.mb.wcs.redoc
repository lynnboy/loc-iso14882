[section#c.mb.wcs
    [:en] Multibyte / wide string and character conversion functions
    [:zh_CN] 多字节字符串/宽字符串以及字符的转换函数
]

[para]
[%[`<cstdlib>][@cstdlib]][%@library <cstdlib>[@cstdlib]]
[%[`<cwchar>][@cwchar]][%@library <cwchar>[@cwchar]]
